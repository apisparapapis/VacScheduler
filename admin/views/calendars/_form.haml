- error = @calendar.errors.include?(:name)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :name, :class => 'control-label'
  .controls
    =f.text_field :name, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:name, :class => 'text-error') : pat(:example)
- error = @calendar.errors.include?(:country_id)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :country_id, :class => 'control-label'
  .controls
    =f.select :country_id, :collection => Country.all, :fields => [:name, :id], :class => 'form-control'
    %span.help-inline=error ? f.error_message_on(:country_id, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:calendars, :index), :class => 'btn btn-default'