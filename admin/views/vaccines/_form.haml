- error = @vaccine.errors.include?(:short_name)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :short_name, :class => 'control-label'
  .controls
    =f.text_field :short_name, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:short_name, :class => 'text-error') : pat(:example)
